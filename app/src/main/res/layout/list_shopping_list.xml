<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_shopping_list_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/list_shopping_list_listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Shopping List Name"/>

    <TextView
        android:id="@+id/list_shopping_list_listCreatedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_shopping_list_listName"
        android:textSize="12sp"
        android:text="Created By: "/>

    <TextView
        android:id="@+id/list_shopping_list_listOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_shopping_list_listName"
        android:layout_toRightOf="@id/list_shopping_list_listCreatedBy"
        android:layout_toEndOf="@id/list_shopping_list_listCreatedBy"
        android:textSize="12sp"
        android:text="Leonardo BarnabÃ©"/>

    <TextView
        android:id="@+id/list_shopping_list_dateCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:text="00/00/0000"/>

</RelativeLayout>